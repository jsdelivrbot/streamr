<main class="container my-3">
  <div class="row py-3 align-items-center">
      <div class='user'>
        <div class='user-avatar-wrapper'>
          <%= image_tag 'anonymous.jpg', class:"user-avatar", alt:"User Profile Picture"%>
          <span class='pt-2'><i class='fa fa-eye fa-fw'></i>
              <p id='current-viewers'><%= @total_visits %></p>
          </span>
        </div>
        <div class='user-details-wrapper ml-5'>
          <h1 id='vid-username' class='h2'><%= @video.channel_title %></h1>
          <p>is now streaming</p>
          <h2 id='vid-title'><%= @video.vid_title %></h2>
        </div>
      </div>
  </div>

  <div class="row row-eq-height">

    <div class="col-8">
      <div class="stream-container"><!-- Videostream container -->
        <input class="video_id" name="vid_id" type="hidden" value=<%= @params[0] %>>
        <iframe class='video' id=<%= @params[0] %> width='700' height='500' src='https://www.youtube.com/embed/<%= @params[0] %>?autoplay=1&start=<%= @params[1] %>'></iframe>
      </div><!-- Videostream container end -->
    </div>

    <div class="col-4">
      <div class='row'>
        <div class='col-6'><!-- Subscribe button -->
        <%= link_to(subscribe_path(@params[3]), class: "btn btn-subscribe") do %>
          <i class='fa fa-fw fa-plus'></i>Subscribe
        <% end %>
        </div><!-- Subscribe button end -->
        <div class='col-6'> <!-- Timer -->



          <div id='timer' class="btn">

          </div>


        </div><!-- Timer End-->
      </div>
      <div class='row mt-4'>
        <div class='col-12'>
          <p>Hit keep if you like what you see!</p>
        </div>
        <div class='col-4'>
          <span class='btn-keep-wrapper'>
            <input type='hidden' id="current-keeps" name="vid_id" type="hidden" value="<%= @total_keeps %>">
          </span>
          <%= button_tag(type:'button', id:"btn-keep",class:"btn") do %>
            <i class='fa fa-fw fa-thumbs-up'></i>Keep
          <% end %>

        </div>
        <div class='col-8'>
          <div class="progress">
            <div class="progress-bar d-flex justify-content-center align-items-center" role="progressbar" aria-valuenow="70" aria-valuemin="0" aria-valuemax="100" style="width:0%">
              <span class="sr-only">0%</span>
            </div>
          </div>
        </div>
      </div>
      <div class='row mt-4'>
        <div class="col-12">

          <div class='chat-wrapper'>
            <div class='chat-title'>
              <h1 class='h4'>Chatroom</h1>
            </div>
            <div id="messages" class='py-2 px-3'>
              <%= render @messages %>
            </div>

            <div id="chat-input" class='pt-2 pb-3 px-3'>
              <form class='chat-form form-inline'>
                <input type="text" data-behavior="room_speaker" placeholder="Say something">
                <%#= button_tag(type: "submit", id:"chat_button", class:"btn chat-button") do %>
                <button type="submit" name="submit">submit</button>
              </form>
            </div>

            <div id="chat-username" class='pt-2 pb-3 px-3'>
              <%= form_tag(root_path, class:"form-inline chat-form") do %>
                <%= text_field_tag :temp_username, nil, { id: "username", placeholder:"Username" } %>
                <%= button_tag(type: "submit", id: "user_button", class:"btn chat-button") do %>
                  <i class='fa fa-paper-plane'></i>
                <% end %>
              <% end %>
            </div>

          </div>

        </div>
      </div>
    </div>
  </div>

</main>
